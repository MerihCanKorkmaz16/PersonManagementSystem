@model PersonManagementSystem.Entities.Persons
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Person Login</title>
    <script type="text/javascript">
        function capLock(event) {
            var ikeycode = (event.which) ? event.which : event.keyCode
            if (!((ikeycode < 65 || ikeycode > 90))) {
                document.getElementById("demo").innerHTML = "Alert! Caps Lock On";
                document.getElementById("demo").style.color = "Red";
                return true;
            } else {
                document.getElementById("demo").innerHTML = "";
                return true;
            }
        }
    </script>
</head>
<body>
    @using (Html.BeginForm())
    {
        <main class="login-form">
            <div class="container" style="margin-top:150px">
                @if (ViewBag.Alert != null)
                {
                    <div style="text-align:center" class="alert alert-danger">
                        @ViewBag.Alert
                    </div>
                }
                <br />
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header" style="text-align:center">Person Register</div>
                            <div class="card-body">
                                <div class="form-group row">
                                    <label for="email_address" class="col-md-4 col-form-label text-md-right">User Name :</label>
                                    <div class="col-md-6">
                                        <input type="text" id="username" class="form-control" name="username" placeholder="Your username">
                                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })

                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="password" class="col-md-4 col-form-label text-md-right">Password :</label>
                                    <div class="col-md-6">
                                        <input type="password" id="password" class="form-control" name="password" placeholder="Your password" onkeypress="javascript:return capLock(event)">
                                        <br />
                                        <div id="demo" style="text-align:center"></div>
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                                    </div>
                                </div>

                                <div class="col-md-6 offset-md-4">
                                    <input type="submit" class="btn btn-primary" id="show_hide" onclick="this.value=(this.value=='Register')?('Loging..'):('Register')" value="Register" />
                                    <a href="#" class="btn btn-link">
                                        Forgot Your Password?
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </main>

    }
    <div style="bottom:0;position: fixed; width:100%;text-align:center">
        <hr style="width:100%;" />
        <footer>
            <p>&copy; Development by Merih Can KORKMAZ</p>
        </footer>
    </div>

</body>
</html>
